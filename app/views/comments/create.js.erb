 <% if @comment.valid? %>
   $('.js-comments').prepend("<%= escape_javascript(render(@comment)) %>");
   $('.new-comment').html("<%= escape_javascript(render partial: 'comments/form', locals: { post: @post, comment: @new_comment }) %>");
   $('.flash').html("<%= escape_javascript(render partial: 'layouts/flash_messages', locals: { notice: "Your comment was saved" }) %>");
 <% else %>
   $('.new-comment').html("<%= escape_javascript(render partial: 'comments/form', locals: { post: @post, comment: @comment }) %>");
   $('.flash').html("<%= escape_javascript(render partial: 'layouts/flash_messages', locals: { notice: "There was an error saving the comment. Please try again." }) %>");
 <% end %>